<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/space_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/freeme_list_divider_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/freeme_list_space_height"
        android:gravity="center_vertical"
        android:paddingStart="?attr/list_item_padding_left"
        android:text="@string/freeme_yellow_page_label"
        android:textColor="@color/freeme_list_space_text_color"
        android:textSize="@dimen/freeme_list_space_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/freeme_list_divider_color" />
</LinearLayout>