<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_dial_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/freeme_dialpad_action_layout_height"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="@color/background_dialer_white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="#e3e3e3" />

    <LinearLayout
        android:id="@+id/dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/dialsim1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/freeme_call_outgoingcall_icon1_selector" />

        <ImageButton
            android:id="@+id/dialsim2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/freeme_call_outgoingcall_icon2_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/dial"
        android:gravity="center"
        android:paddingStart="10dip">

        <ImageButton
            android:id="@+id/dialpad_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/freeme_call_hidedialpad_btn"
            android:contentDescription="@string/action_menu_dialpad_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/dial"
        android:gravity="center"
        android:paddingEnd="10dip">

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/freeme_call_clear_btn"
            android:contentDescription="@string/description_delete_button" />
    </LinearLayout>
</RelativeLayout>
